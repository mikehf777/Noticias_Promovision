{% extends '::master.html.twig' %}

{% block title %}Login Noticias{% endblock %}
{% block stylesheets %}
	<link href="{{ asset('bundles/nota/css/nota.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block header %}
		<div class="header">
			<div class="logo">
				<img class="logo" alt="Logo Promovision" src="{{ asset('bundles/usuario/images/promovision.png') }}"/>
			</div>
			<div class="user_info"></div>
			{% set user = 'Reportero' %}
			<div class="menu">{% include 'NotaBundle:Default:menu.html.twig' %}</div>
		</div>
{% endblock %}

{% block article %}
	{% for avance in avances %}
		{{ avance.id }}
		<br/>
		{{ avance.titulo }}
                <a href="{{ path('tabla_avance_opciones',{ 'opcion': 'ver' ,'nota': avance } ) }}">ver</a>
	{% endfor%}
{% endblock %}
